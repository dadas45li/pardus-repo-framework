#!/bin/bash
cd /srv/ftp/pts/
apt-ftparchive -a amd64 packages pool/main >$1/Packages.main64
apt-ftparchive -a i386 packages pool/main >$1/Packages.main32
apt-ftparchive -a amd64 packages pool/contrib >$1/Packages.con64
apt-ftparchive -a i386 packages pool/contrib >$1/Packages.con32
apt-ftparchive -a amd64 packages pool/non-free >$1/Packages.non64
apt-ftparchive -a i386 packages pool/non-free >$1/Packages.non32
#Packages olu≈üturuldu. Packages kopyalanacak
mkdir -p $1/Packages.main64 $1/dists/main/binary-amd64/
mkdir -p $1/Packages.main32 $1/dists/main/binary-i386/
mkdir -p $1/Packages.non64 $1/dists/non-free/binary-amd64/
mkdir -p $1/Packages.non32 $1/dists/non-free/binary-i386/
mkdir -p $1/Packages.con64 $1/dists/contrib/binary-amd64/
mkdir -p $1/Packages.con32 $1/dists/contrib/binary-i386/
#kopyala
cp -f $1/Packages.main64 $1/dists/main/binary-amd64/Packages
cp -f $1/Packages.main32 $1/dists/main/binary-i386/Packages
cp -f $1/Packages.non64 $1/dists/non-free/binary-amd64/Packages
cp -f $1/Packages.non32 $1/dists/non-free/binary-i386/Packages
cp -f $1/Packages.con64 $1/dists/contrib/binary-amd64/Packages
cp -f $1/Packages.con32 $1/dists/contrib/binary-i386/Packages
gzip $1/dists/main/binary-amd64/Packages
gzip $1/dists/main/binary-i386/Packages
gzip $1/dists/non-free/binary-amd64/Packages
gzip $1/dists/non-free/binary-i386/Packages
gzip $1/dists/condrib/binary-amd64/Packages
gzip $1/dists/contrib/binary-i386/Packages
